#include <iostream>
#include <queue>
using namespace std;
int BFS(int start, int n, int a[100][100])
{
    bool visited[100];
    int count = 0;
    queue<int> q;
    q.push(start);
    visited[start] = true;
    count++;
    while (!q.empty())
    {
        int u = q.front();
        q.pop();
        for (int v = 1; v <= n; v++)
        {
            if (a[u][v] == 1 && !visited[v])
            {
                visited[v] = true;
                q.push(v);
                count++;
            }
        }
    }
    return count;
}

int main()
{
    int a[100][100];
    int n, s;
    cin >> n >> s;
    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= n; j++)
        {
            cin >> a[i][j];
        }
    }
    cout << BFS(s, n, a) << endl;
}
