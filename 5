#include <iostream>
#include <queue>
using namespace std;
int func(int fw, int n, int a[100][100])
{
    bool tr[100];
    int s = 0;
    queue<int> q;
    q.push(fw);
    tr[fw] = true;
    s++;
    while (!q.empty())
    {
        int u = q.front();
        q.pop();
        for (int v = 1; v <= n; v++)
        {
            if (a[u][v] == 1 && !tr[v])
            {
                tr[v] = true;
                q.push(v);
                s++;
            }
        }
    }
    return s;
}
int main()
{
    int a[100][100];
    int n, s;
    cin >> n >> s;
    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= n; j++)
        {
            cin >> a[i][j];
        }
    }
    cout << func(s, n, a) << endl;
}
